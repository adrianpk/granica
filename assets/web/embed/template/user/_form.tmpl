{{define "form"}} {{$user := .Data.User}} {{$action := .Data.Action}} {{$csrf := .CSRF}}

    <div class="w-2/3 mx-auto">
        <div class="bg-white shadow-md rounded my-6">

          <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" accept-charset="UTF-8" action="{{$action.Target}}" method="POST">
            <input name="_method" type="hidden" value="{{$action.Method}}">

            {{$csrf.csrfField}}

            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Username</label>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" name="username" placeholder="Min. 4 characters" value=""/>
            </div>

            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Password</label>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="password" name="password" type="password" placeholder="Min 8 characters" value=""/>
            </div>

            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Email</label>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" name="email" type="text" value="{{$user.Email}}"/>
            </div>

            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Email confirmation</label>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="password-confirmation" name="password-confirmation" type="password" placeholder=""
                 value="{{$user.EmailConfirmation}}"/>
            </div>

            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Given Name</label>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="given-name" name="given-name" type="text" value="{{$user.GivenName}}"/>
            </div>

            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Middle Names</label>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="middle-names" name="middle-names" type="text" value="{{$user.MiddleNames}}"/>
            </div>

            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Family Name</label>
              <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="family-name" name="family-name" type="text" value="{{$user.FamilyName}}"/>
            </div>

            <div class="">
              {{if not $user.IsNew}}
              <!-- Update -->
              <div class="mb-4">
                <input class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-1 px-3 border border-blue-500 hover:border-transparent round" type="submit" value="Update">
              </div>
              <!-- Update -->
              {{else}}
              <!-- Save -->
              <div class="mb-4">
                <input class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-1 px-3 border border-blue-500 hover:border-transparent round" type="submit" value="Save">
              </div>
              <!-- Save -->
              {{end}}
            </div>
          </form>
        </div>
      </div>

      {{if not $user.IsNew}}
      <div class="w-2/3 mx-auto">
         <div class="bg-white shadow-md rounded my-6">
            <div class="mb-4">

              <!-- Delete -->
              <div class="is-jsonly bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <a class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-1 px-3 border border-red-500 hover:border-transparent round" data-confirm="Are you sure?" data-csrf="" data-method="delete" data-to="{{$user | userPathSlug}}"
              href="#" rel="nofollow" onclick="return confirm('Are you sure?')">Delete</a>
              </div>
              <!-- Delete -->
             <i/div>
          </div>

          <!-- Init delete -->
          <noscript>
            <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" accept-charset="UTF-8" action="{{$user | userPathInitDelete}}" method="POST">
              <input class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-1 px-3 border border-red-500 hover:border-transparent round" type="submit" value="Delete">
            </form>
          </noscript>
          <!-- Init delete -->
     </div>
     {{end}}
{{end}}
